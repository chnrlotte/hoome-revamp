<style>
  body {
    margin: 0;
    padding: 0;
  }

  a:-webkit-any-link {
    color: black;
    text-decoration: none;
  }

  .header-container {
    padding: 2rem;
  }

  .header-center {
    width: 100%;
    position: relative;
  }

  .logo-container {
    width: 7rem;
    position: absolute;
    left: 50%;
    content: '';
    margin-left: -3.5rem;
    top: 50%;
    transform: translate(0, -50%);
  }

  .logo-container img {
    width: 100%;
  }

  .main-menu {
    margin-left: auto;
    margin-right: auto;
  }

  .main-menu ul {
    margin: 0;
    padding: 0;
    list-style: none;
    text-align: right;
  }

  .main-menu li {
    float: none;
    display: inline-block;
  }

  .main-menu ul li:nth-child(1) {
    float: left !important;
  }

  .main-menu li:nth-child(2) {
    float: left;
  }

  .main-menu li:nth-child(3) {
    float: left;
  }

  .main-menu li a {
    padding: 10px 20px;
  }
</style>

<header>
  <div class="header-container">
    <div class="header-center">
      <div class="logo-container">
        <a href=""
          ><img src="https://cdn.shopify.com/s/files/1/0592/5355/5293/files/hoome_wordmark.png?v=1659692497"
        ></a>
      </div>
      <nav class="main-menu">
        <ul>
          {% for link in linklists['main-menu'].links -%}
            <li>{{ link.title | link_to: link.url }}</li>
          {%- endfor %}
        </ul>
      </nav>
    </div>
  </div>
</header>
